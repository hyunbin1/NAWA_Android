<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NAWA" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/background</item>
        <item name="toolbarNavigationButtonStyle">@style/AppTheme.Actionbar</item>
        <item name="android:actionMenuTextColor">@color/orange</item>
    </style>
    <style name="ActionBarTextColor" parent="android:TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="AppTheme.Actionbar" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:tint">@color/black</item>
    </style>
    <!-- Custom Button Style -->
    <style name="CustomButtonStyle">
        <item name="android:background">@drawable/complete_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!-- splash Screen Theme -->
    <style name="AppTheme.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/orange</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_logo</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="postSplashScreenTheme">@style/Theme.NAWA</item>
    </style>
    <style name="Theme.NAWA" parent="Base.Theme.NAWA" />
</resources>