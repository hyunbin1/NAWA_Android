<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="나와에 온걸"
            android:textSize="25sp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="환영해요 :)"
            android:textSize="25sp"
            android:textColor="@color/black"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginVertical="5dp"
        android:text="아이디와 비밀번호를 입력해주세요"
        android:textSize="18sp"
        android:textColor="@color/black"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/id"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_round"
            android:layout_marginTop="5dp"
            android:paddingHorizontal="12dp"
            android:paddingVertical="17dp"
            android:textSize="15sp"
            android:hint="@string/idHnt"/>
        <TextView
            android:id="@+id/emailError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:text="@string/invalidemail"
            android:textColor="@color/warn"
            android:padding="5dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pw"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_round"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="17dp"
                android:textSize="15sp"
                android:hint="@string/pwHnt"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginVertical="10dp">
                <TextView
                    android:id="@+id/passwordCheck1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="7dp"
                    android:layout_marginVertical="5dp"
                    android:text="✓    8자 이상 16자 이하"
                    android:textColor="@color/invalid"/>
                <TextView
                    android:id="@+id/passwordCheck2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="7dp"
                    android:layout_marginVertical="5dp"
                    android:text="✓    영문 대소문자, 숫자"
                    android:textColor="@color/invalid"/>
                <TextView
                    android:id="@+id/passwordCheck3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center"
                    android:paddingLeft="7dp"
                    android:layout_marginVertical="5dp"
                    android:text="✓    !@#$%^&amp;*()_+"
                    android:textColor="@color/invalid"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pwChk"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <EditText
                android:id="@+id/passwordAgain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/textview_round"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="17dp"
                android:textSize="15sp"
                android:hint="@string/pwChkHnt"/>
            <TextView
                android:id="@+id/passwordAgainErr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:text="@string/wrongpw"
                android:textColor="@color/warn"
                android:padding="5dp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/nextButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round_cantclick"
        android:layout_margin="15dp"
        android:text="@string/next"
        android:textSize="17sp"
        android:textColor="@color/white"/>
</LinearLayout>